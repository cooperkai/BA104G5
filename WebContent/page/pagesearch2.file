    <%}%>
  
    <%if(pageIndex<pageIndexArray[pageNumber-1]){%>
        <li><A href="<%=request.getRequestURI()%>?whichPage=<%=whichPage+1%>">下一頁 </A></li>
        <li><A href="<%=request.getRequestURI()%>?whichPage=<%=pageNumber%>">>&raquo;</A></li>
    <%}%>
  <%}%>  
		</ul>
	</div>

